<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SortFilterTabTextViewWhiteColor">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_item_color_grey_selector</item>
        <item name="android:textSize">@dimen/textsize_l</item>
    </style>

    <style name="FilterSubTextView">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_filter_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_xnormal</item>
        <item name="android:paddingTop">@dimen/padding_xnormal</item>
        <item name="android:textColor">@color/tab_item_color_selector</item>
        <item name="android:textSize">@dimen/textsize_m</item>
    </style>

    <style name="SortTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_filter_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/tab_item_color_selector</item>
        <item name="android:textSize">@dimen/textsize_l</item>

    </style>

    <style name="SortSubVTextView">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_normal</item>
        <item name="android:layout_marginLeft">@dimen/padding_xlarge</item>
        <item name="android:layout_marginTop">@dimen/padding_normal</item>
        <item name="android:textColor">@color/tab_item_color_selector</item>
        <item name="android:textSize">@dimen/textsize_l</item>

    </style>

    <style name="SortDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_normal</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:background">@color/grey_light</item>

    </style>

    <style name="SortSubIv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/padding_xsmall</item>
        <item name="android:background">@drawable/iv_selector</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
